generator client {
  provider = "prisma-client"
  output = "../generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Website{
  id          String @id @default(cuid())
  name        String
  url         String
  status      WebsiteStatus
  timestamps  DateTime @default(now())
  userId      String?
  user        User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  ticks       WebsiteTick[]
}

model User{
  id            String @id @default(cuid())
  name          String
  email         String
  password      String
  websites      Website[]

}

model WebsiteTick {
  id        String @id @default(cuid())
  response_time_ms  Int
  status      WebsiteStatus
  region_id   String
  region      Region @relation(fields: [region_id], references: [id])
  website_id    String
  website       Website @relation(fields: [website_id],references: [id])
}

model Region{
  id        String @id @default(cuid())
  name      String
  ticks     WebsiteTick[]
}



enum WebsiteStatus{
  up
  unknown
  down
}
